# Example Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"

# OpenRouter (Alternative to OpenAI)
OPENROUTER_API_KEY="your-openrouter-api-key"

# Pinecone
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_INDEX_NAME="your-pinecone-index-name"

# Resend (Email)
RESEND_API_KEY="your-resend-api-key"

# Simple Video Hosting Configuration
# For self-hosted video processing with FFmpeg
VIDEO_STORAGE_PATH="/var/www/classbots/videos"
VIDEO_UPLOAD_MAX_SIZE="5368709120"  # 5GB in bytes
VIDEO_PROCESSING_ENABLED="true"
VIDEO_QUALITIES="360p,720p,1080p"
VIDEO_BASE_URL="https://your-domain.com/videos"
THUMBNAIL_BASE_URL="https://your-domain.com/thumbnails"

# FFmpeg paths (usually these are the defaults)
FFMPEG_PATH="/usr/bin/ffmpeg"
FFPROBE_PATH="/usr/bin/ffprobe"

# Cleanup settings
DELETE_UPLOADS_AFTER_DAYS="7"
DELETE_FAILED_AFTER_DAYS="1"

# File Upload Settings
MAX_FILE_SIZE="52428800"  # 50MB for regular file uploads

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds

# Security
ALLOWED_DOMAINS="localhost,127.0.0.1,your-domain.com"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="your-ga-id"
MIXPANEL_TOKEN="your-mixpanel-token"

# External Services (Optional)
STRIPE_PUBLISHABLE_KEY="your-stripe-public-key"
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Development
NODE_ENV="development"
DEBUG="false"